---
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import '../styles/global.css'

interface Props {
  title: string
  description?: string
  showHeader?: boolean
  showFooter?: boolean
}

const {
  title,
  description = 'Site criado com Astro e Tailwind CSS',
  showHeader = true,
  showFooter = true,
} = Astro.props
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <script>
      import '../scripts/gtm.js'
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <slot name="head" />
  </head>
  <body class="min-h-screen flex flex-col bg-background">
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-NH2HXGV"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->

    {showHeader && <Header />}

    <main class="flex-grow">
      <slot />
    </main>

    {showFooter && <Footer />}
    <script>
      import '../scripts/smooth-scroll.js'
      import '../scripts/url-params-appender.js'
    </script>
  </body>
</html>
