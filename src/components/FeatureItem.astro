---
// FeatureItem component

interface Props {
  title: string;
  description: string;
  icon?: string;
  iconColor?: string;
  class?: string;
}

const { 
  title, 
  description, 
  icon = '', 
  iconColor = 'text-accent',
  class: className = '' 
} = Astro.props;
---

<div class={`flex flex-col ${className}`}>
  {icon && (
    <div class={`mb-4 ${iconColor}`}>
      <Fragment set:html={icon} />
    </div>
  )}
  
  <h3 class="text-2xl font-semibold tracking-tight mb-2">
    {title}
  </h3>
  
  <p class="leading-7 text-gray-600">
    {description}
  </p>
</div>
